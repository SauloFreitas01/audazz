# DAST Monitor Environment Configuration
# Copy this file to .env and customize for your environment

# ====================================================================
# DATABASE CONFIGURATION
# ====================================================================
POSTGRES_PASSWORD=secure-password-change-me
POSTGRES_USER=dast_user
POSTGRES_DB=dast_monitor
REDIS_PASSWORD=redis-password-change-me

# ====================================================================
# GRAFANA CONFIGURATION
# ====================================================================
GRAFANA_ADMIN_PASSWORD=admin-change-me
GRAFANA_API_KEY=your-grafana-api-key-here

# ====================================================================
# API AUTHENTICATION
# ====================================================================
ADMIN_API_TOKEN=admin-token-change-me-to-secure-value
READONLY_API_TOKEN=readonly-token-change-me-to-secure-value
JWT_SECRET_KEY=jwt-secret-key-change-me-to-random-string

# ====================================================================
# NOTIFICATION INTEGRATIONS
# ====================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/...
EMAIL_USERNAME=alerts@yourcompany.com
EMAIL_PASSWORD=your-email-password

# ====================================================================
# SIEM/SOAR INTEGRATIONS
# ====================================================================
SIEM_WEBHOOK_URL=https://your-siem-webhook-endpoint
SPLUNK_TOKEN=your-splunk-hec-token
ES_USERNAME=elastic
ES_PASSWORD=your-elasticsearch-password

# ====================================================================
# AZURE SENTINEL (if using)
# ====================================================================
AZURE_WORKSPACE_ID=your-workspace-id
AZURE_SHARED_KEY=your-shared-key

# ====================================================================
# INFLUXDB (alternative to Prometheus)
# ====================================================================
INFLUXDB_ADMIN_PASSWORD=influx-admin-password
INFLUXDB_ADMIN_TOKEN=influx-token-change-me-to-secure-value

# ====================================================================
# SECURITY SETTINGS
# ====================================================================
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# ====================================================================
# SYSTEM CONFIGURATION
# ====================================================================
LOG_LEVEL=INFO
MAX_CONCURRENT_SCANS=3
RETENTION_DAYS=90
SCAN_TIMEOUT=3600

# ====================================================================
# DEVELOPMENT/TESTING
# ====================================================================
DEBUG_MODE=false
TEST_MODE=false
MOCK_SCANS=false